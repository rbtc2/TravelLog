{
  "name": "travellog",
  "version": "1.0.0",
  "description": "TravelLog - 여행 일지 관리 애플리케이션",
  "main": "index.html",
  "scripts": {
    "dev": "python -m http.server 8000",
    "build": "node tools/css-builder.js",
    "build:watch": "node tools/css-builder.js --watch",
    "build:critical": "node tools/css-builder.js --critical-only",
    "optimize": "node tools/css-builder.js --optimize",
    "analyze": "node tools/css-analyzer.js",
    "test": "node tools/css-tester.js",
    "lint": "node tools/css-linter.js",
    "format": "prettier --write 'styles/**/*.css'",
    "clean": "rimraf dist/",
    "serve": "python -m http.server 8000 --directory dist"
  },
  "keywords": [
    "travel",
    "log",
    "diary",
    "css",
    "optimization",
    "performance"
  ],
  "author": "TravelLog Team",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/travellog.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/travellog/issues"
  },
  "homepage": "https://github.com/your-username/travellog#readme"
}
